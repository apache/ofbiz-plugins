<api description="Customers API" displayName="Customers API" name="CustomersAPI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="rest-api.xsd">
  <resource description="" displayName="" enabled="true" name="Customers Resource" path="/hcv1/customers">
    <operation verb="get" path="/password-hint" description="Retrieves password hint">
      <service name="getPasswordHint"/>
    </operation>
    <operation verb="post" path="/reset-password" description="Sends reset password mail">
      <service name="sendResetPasswordEmail"/>
    </operation>
    <operation verb="post" description="Creates Customer">
      <service name="createCustomer"/>
    </operation>
    <operation verb="put" path="/{customerPartyId}" description="Updates customer's personal information">
      <service name="updatePerson"/>
    </operation>
    <operation verb="post" path="/{customerPartyId}/change-password" description="Changes customer's account password">
      <service name="changePassword"/>
    </operation>
    <operation verb="post" path="/{customerPartyId}/profile" description="Retrieves customer profile">
      <service name="getCustomerProfile"/>
    </operation>
    <operation verb="post" path="/{customerPartyId}/addresses" description="Creates postal address">
      <service name="createCustomerPostalAddress"/>
    </operation>
    <operation verb="put" path="/{customerPartyId}/addresses/{contactMechId}" description="Updates postal address">
      <service name="updateCustomerPostalAddress"/>
    </operation>
    <operation verb="delete" path="/{customerPartyId}/addresses/{contactMechId}" description="Expires contact information">
      <service name="removeCustomerContactMech"/>
    </operation>
    <operation verb="delete" path="/{customerPartyId}/contact-info/{contactMechId}/purposes/{contactMechPurposeTypeId}" description="Expires contact information purpose">
      <service name="removeCustomerContactMechPurpose"/>
    </operation>
    <operation verb="post" path="/{customerPartyId}/phones" description="Creates telecom number">
      <service name="createCustomerTelecomNumber"/>
    </operation>
    <operation verb="put" path="/{customerPartyId}/phones/{contactMechId}" description="Updates telecom number">
      <service name="updateCustomerTelecomNumber"/>
    </operation>
    <operation verb="post" path="/{customerPartyId}/emails" description="Creates email address">
      <service name="createCustomerEmailAddress"/>
    </operation>
    <operation verb="put" path="/{customerPartyId}/emails/{contactMechId}" description="Updates email address">
      <service name="updateCustomerEmailAddress"/>
    </operation>
  </resource>
</api>