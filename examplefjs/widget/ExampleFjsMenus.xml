<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://ofbiz.apache.org/Widget-Menu" xsi:schemaLocation="http://ofbiz.apache.org/Widget-Menu http://ofbiz.apache.org/dtds/widget-menu.xsd">

    <menu name="ExampleAppBarFj" title="${uiLabelMap.ExampleApplication}" extends="CommonAppBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <menu-item name="exampleMgmt" title="${uiLabelMap.PageTitleExampleMgmt}">
            <link target="Example/mgmtPg"/>
        </menu-item>
        <menu-item name="exampleFeatureMgmt" title="${uiLabelMap.ExampleFeature}">
            <link target="ExampleFeature/mgmtPg"/>
        </menu-item>
        <menu-item name="portalPageFrontJs" parent-portal-page-value="ExampleMgmtFrontJs">
        </menu-item>
        <menu-item name="iconsList" title="${uiLabelMap.PageTitleIconsList}">
            <link target="iconsList"/>
        </menu-item>
    </menu>

    <menu name="EditExample" extends="CommonTabBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <menu-item name="EditExample" title="${uiLabelMap.ExampleExample}">
            <link target="example/{exampleId}">
                <parameter param-name="exampleId"/>
            </link>
        </menu-item>
        <menu-item name="EditExampleItems" title="${uiLabelMap.CommonItems}">
            <link target="EditExampleItems">
                <parameter param-name="exampleId"/>
            </link>
        </menu-item>
        <menu-item name="EditExampleFeatureAppls" title="${uiLabelMap.ExampleFeatures}">
            <link target="EditExampleFeatureAppls">
                <parameter param-name="exampleId"/>
            </link>
        </menu-item>
    </menu>

    <!-- Screenlets menus : used on portal portlets and shown in screenlet header, used purpose icons (refresh, edit, add,...), used TabBar Menu style -->
    <menu name="ExampleDetailsMenu"  extends="CommonTabBarMenu" extends-resource="component://common/widget/CommonMenus.xml"
          default-selected-style="selected" type="simple"> <!-- avant c'était modal  : type de menu pour différentier ceux en ligne et ceux déroulant -->
        <actions>
            <set field="areaId" value="ExampleDetail-00001"/>
        </actions>
        <menu-item name="showExample" >
            <condition>
                <and>
                    <not><if-empty field="exampleId"/></not>
                    <or>
                        <if-empty field="showExampleMenu"/>
                        <if-compare field="showExampleMenu" operator="equals" value="Y"/>
                    </or>
                </and>
            </condition>
            <link text="Show" target="showPortletFj" link-type="set-area" url-mode="intra-post" target-window="${areaId}">
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <parameter param-name="portalPageId" from-field="parameters.portalPageId"/>
                <parameter param-name="portalPortletId" value="ExampleDetail"/>
                <parameter param-name="portletSeqId"    value="00001"/>
                <parameter param-name="subPortletId" value="ShowExample"/>
                <image src="${iconsPurpose.Details}" title="${uiLabelMap.IconsTooltips_Details}"/>
            </link>
        </menu-item>
        <menu-item name="exampleItems">
            <condition>
                <and>
                    <not><if-empty field="parameters.exampleId"/></not>
                    <or>
                        <if-empty field="exampleItemsMenu"/>
                        <if-compare field="exampleItemsMenu" operator="equals" value="Y"/>
                    </or>
                </and>
            </condition>
            <link  text="Items" target="showPortletFj" link-type="set-area" url-mode="intra-post" target-window="${areaId}">
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <parameter param-name="portalPageId" from-field="parameters.portalPageId"/>
                <parameter param-name="portalPortletId" value="ExampleDetail"/>
                <parameter param-name="portletSeqId"    value="00001"/>
                <parameter param-name="subPortletId" value="ExampleItems"/>
                <image src="${iconsPurpose.Items}" title="${uiLabelMap.IconsTooltips_Items}"/>
            </link>
        </menu-item>
        <menu-item name="exampleFeatureAppls">
            <condition>
                <and>
                    <not><if-empty field="parameters.exampleId"/></not>
                    <or>
                        <if-empty field="exampleFeatureApplsMenu"/>
                        <if-compare field="exampleFeatureApplsMenu" operator="equals" value="Y"/>
                    </or>
                </and>
            </condition>
            <link  text="Features" target="showPortletFj" link-type="set-area" url-mode="intra-post" target-window="${areaId}">
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <parameter param-name="portalPageId" from-field="parameters.portalPageId"/>
                <parameter param-name="portalPortletId" value="ExampleDetail"/>
                <parameter param-name="portletSeqId"    value="00001"/>
                <parameter param-name="subPortletId" value="ExampleFeatureAppls"/>
                <image src="${iconsPurpose.ProductFeature}" title="${uiLabelMap.ExampleFeatures}"/>
            </link>
        </menu-item>
        <menu-item name="exampleStatus">
            <condition>
                <and>
                    <not><if-empty field="parameters.exampleId"/></not>
                    <or>
                        <if-empty field="exampleStatusMenu"/>
                        <if-compare field="exampleStatusMenu" operator="equals" value="Y"/>
                    </or>
                </and>
            </condition>
            <link  text="Status history" target="showPortletFj" link-type="set-area" url-mode="intra-post" target-window="${areaId}">
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <parameter param-name="subPortletId" value="ExampleStatus"/>
                <parameter param-name="portalPageId" from-field="parameters.portalPageId"/>
                <parameter param-name="portalPortletId" value="ExampleDetail"/>
                <parameter param-name="portletSeqId"    value="00001"/>
                <image src="${iconsPurpose.Plan}" title="${uiLabelMap.ExampleStatusHistory}"/>
            </link>
        </menu-item>
    </menu>


    <menu name="ShowExample" extends="CommonTabBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <actions>
          <set field="areaId" from-field="parameters.areaId" default-value="${currentAreaId}"/>
        </actions>
        <menu-item name="updateExample">
            <link  text="Edit ${exampleId}" target="editExample" link-type="set-area" url-mode="intra-post" target-window="EditExample01"> <!-- target-window is used to give destination id -->
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <auto-parameters-portlet/>
                <image src="${iconsPurpose.Edit}" title="${uiLabelMap.IconsTooltips_Edit}"/>
            </link>
        </menu-item>
    </menu>
    <menu name="ExampleItems" extends="CommonTabBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <actions>
          <set field="areaId" from-field="parameters.areaId" default-value="PP_${portalPageId}${portalPortletId}00001"/>
        </actions>
        <menu-item name="addExampleItem">
            <link  text="Add" target="editExampleItem" link-type="set-area" url-mode="intra-post" target-window="ExampleItem01"> <!-- target-window is used to give which area will be update -->
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <auto-parameters-portlet/>
                <image src="${iconsPurpose.Add}" title="${uiLabelMap.IconsTooltips_Add}"/>
            </link>
        </menu-item>
    </menu>

    <!-- External menus : use for actions witch drive you on another portal page, not in screenlet header, used in a screen, used purpose icons, used ButtonBar Menu style-->
    <menu name="ExampleExternalMenu" extends="CommonButtonBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <menu-item name="newExample">
            <link target="editExampleItem" text="${uiLabelMap.ExampleNewExample}">
                <image src="${iconsPurpose.Add}" title="${uiLabelMap.ExampleNewExample}"/>
            </link>
        </menu-item>
        <menu-item name="recapExample">
            <condition>
                <not><if-empty field="parameters.exampleId"/></not>
            </condition>
            <link target="showPortalPage" text="${uiLabelMap.CommonRecapPage}">
                <parameter param-name="portalPageId" from-field="recapPageId" value="ExampleRecapJs"/>
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <image src="${iconsPurpose.Overview}" title="${uiLabelMap.IconsTooltips_Overview}"/>
            </link>
        </menu-item>
    </menu>

    <menu name="ExampleFeatureAppls" extends="CommonTabBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <menu-item name="addExampleFeatureAppl">
            <link  target="editExampleFeatureAppl" link-type="set-area" target-window="EditExampleFeatureApplArea">
                <parameter param-name="exampleId" from-field="parameters.exampleId"/>
                <auto-parameters-portlet/>
                <image src="${iconsPurpose.Add}" title="${uiLabelMap.IconsTooltips_Add}"/>
            </link>
        </menu-item>
    </menu>

    <!-- External menus : use for actions witch drive you on another portal page, not in screenlet header, used in a screen, used purpose icons, used ButtonBar Menu style-->
    <!-- TODO when possible, not external but modal screen -->
    <menu name="ExampleFeatureExternalMenu" extends="CommonButtonBarMenu" extends-resource="component://common/widget/CommonMenus.xml">
        <!-- Add title in order to have both icon and text -->
        <menu-item name="newExampleFeature" title="${uiLabelMap.ExampleNewExampleFeature}">
            <link target="/example/control/EditExampleFeature" url-mode="inter-app">
                <image src="${iconsPurpose.Add}" title="${uiLabelMap.ExampleNewExampleFeature}"/>
            </link>
        </menu-item>
    </menu>
</menus>
